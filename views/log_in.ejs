<!DOCTYPE html>
<html lang="en">
  
<head>
  
  <%- include('./partials/frontend_head'); -%>
  <meta http-equiv="Content-Type" content="">
  <meta http-equiv="X-UA-Compatible" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="">
  <meta name="keywords" content="">
  <meta name="author" content="">
  <link rel="icon" href="" type="image/x-icon">
  <link rel="shortcut icon" href="" type="image/x-icon">
  <link rel="preconnect" href="https://fonts.googleapis.com/">
  <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&amp;display=swap" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="../../css/vendors/font-awesome.css">
  <!-- Bootstrap css-->
  <link rel="stylesheet" type="text/css" href="../../css/vendors/bootstrap.css">
  <!-- App css-->
  <link rel="stylesheet" type="text/css" href="../../css/style.css">
  <link rel="stylesheet" type="text/css" href="../../css/responsive.css">

  <!-- toster jqury link -->
  <link rel="stylesheet" href="../../css/toastr.min.css"/>
  <script src="../../js/tostify/jquery-1.9.1.min.js"></script>
  <script src="../../js/tostify/js-toastr.js"></script>
</head>
<body onload="offdarkmode()">
  <%- include('./partials/frontend_header'); -%>
   
    <!-- login page start-->
    <div class="container-fluid">
      <div class="row">
        <div class="col-xl-12 p-0">    
          <div class="login-card">
            <div>
              <div class="login-main px-4"> 
                <form class="theme-form" action="/log_in" method="post" id="login_form">
                  <h4 class="text-center"><%=language.Sign_in_to_account%></h4>
                  <p class="text-center"><%=language.Enter_your_email_password_to_login%></p>
                  
                  <div class="form-group">
                    <label class="col-form-label"><%=language.Email_Address%></label>
                    <input class="form-control" type="email" name="email" placeholder="<%=language.Enter%> <%=language.E_Mail%>" required>
                  </div>
                  
                  <div class="form-group">
                    <label class="col-form-label"><%=language.Password%></label>
                    <div class="form-input position-relative">
                      <input class="form-control" type="password" name="password" placeholder="*******" required>
                    </div>
                  </div>
                  <a href="/forget_password"><%=language.Forget_Password%></a>
                 
                  <button class="btn btn-primary btn-block btn-square b-r-10 w-100 mt-3" type="submit"><%=language.Sign_in%></button>
                  <div class="login-social-title mb-3">
                    <h6><%=language.Or_Sign_up_with%></h6>
                  </div>
                  <p class="mb-0 text-center"><%=language.Dont_have_account%><a class="ms-2" href="/sign_up"><%=language.Create_Account%></a></p>
                  <input type="hidden" id="offdarkmode" value="darkoff">

                  <hr>

                  <div class="my-4">
                    <button class="btn btn-outline-primary-2x btn-square b-r-10 mb-2" id="login_admin"><%=language.Admin%></button>
                    <button class="btn btn-outline-primary-2x btn-square b-r-10 mb-2" id="login_customer"><%=language.Customer%></button>
                    <button class="btn btn-outline-primary-2x btn-square b-r-10 mb-2" id="login_driver"><%=language.Carrier%></button>
                    <button class="btn btn-outline-primary-2x btn-square b-r-10 " id="login_driver_btn"><%=language.Driver%></button>
                    <button class="btn btn-outline-primary-2x btn-square b-r-10 " id="login_secound_admin"><%=language.Admin_Role%></button>
                  </div>

                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>



  <%- include('./partials/frontend_footer'); -%>
  <%- include('./partials/frontend_script'); -%>
  <%- include('./partials/script'); -%>

  </body>
</html>